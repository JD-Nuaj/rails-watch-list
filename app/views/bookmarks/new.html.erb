<h1>Add Bookmark</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.label :movie_id %>
    <%= f.association :movie, collection: Movie.all, prompt: "Select a movie", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>

  <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
