<h1><%= @list.name %></h1>
<% if @list.photo.attached?%>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<%end %>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %>:</strong> <%= bookmark.comment %>
      <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
    </li>
  <% end %>
</ul>
<%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to 'Delete', list_path(@list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>

<%= link_to "Back to Lists", root_path, class: "btn btn-secondary" %>
