<h1>Create your List</h1>

<%= form_for @list do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <%= f.submit "Create List", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
